{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "lib": ["es2015"]
    },
    "allowSyntheticDefaultImports": true,
    //указывает что включаться должны только файлы из папки /src
    "include": ["src/**/*"]
}